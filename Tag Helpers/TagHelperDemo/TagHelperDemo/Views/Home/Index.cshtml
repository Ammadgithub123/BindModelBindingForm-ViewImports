@model TagHelperDemo.Models.Employee;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h1 class="jumbotron text-center" style="background-color: deeppink">FORUM.</h1>
            <form class="d-grid" asp-action="Index" asp-controller="Home" method="post">
                <label asp-for="Name">Enter The Name:</label>
                <input asp-for="Name" placeholder="Enter The Name" class="form-control" />
                <br />
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">Select Gender</option>
                </select>
                <br />
                <input asp-for="Age" placeholder="Enter The Age" class="form-control" />
                <br />
                <input asp-for="Designation" placeholder="Enter The Designation" class="form-control" />
                <br />
                <input asp-for="Salary" placeholder="Enter The Salary" class="form-control" />
                <br />
                <label for="">
                    MARRIED:
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Married" value="Yes">
                        <label class="form-check-label" for="flexRadioDefault1">
                            YES
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Married" value="No">
                        <label class="form-check-label" for="flexRadioDefault2">
                            NO
                        </label>
                    </div>
                    <br />
                    <textarea asp-for="Description" class="form-control" placeholder="Enter Description" rows="6">

                    </textarea>
                    <br />
                </label>

                <input type="submit" value="Submit" class="btn btn-warning btn-block">
            </form>
        </div>
    </div>
</div>


